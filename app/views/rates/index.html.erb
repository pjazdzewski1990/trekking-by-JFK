<h1>Listing rates</h1>

<table>
  <tr>
    <th>Sum</th>
    <th>Votes</th>
    <th>Marker</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rates.each do |rate| %>
  <tr>
    <td><%= rate.sum %></td>
    <td><%= rate.votes %></td>
    <td><%= rate.marker %></td>
    <td><%= link_to 'Show', rate %></td>
    <td><%= link_to 'Edit', edit_rate_path(rate) %></td>
    <td><%= link_to 'Destroy', rate, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

